# This file contains formatting directives for editors.
#
# This is supported by many of the respectable IDEs, see
# http://editorconfig.org for more details.

root = true

[*]
indent_size = 2
max_line_length = 120
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8


[*.yaml]


[*.{py,ipynb,pyi}]
indent_size = 4

[*.html]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = false

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = unset
insert_final_newline = false

[Makefile]
indent_style = tab

[*.bat]
indent_style = tab

[*.http]
insert_final_newline = false

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[{go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[Dockerfile]
indent_size = 2

